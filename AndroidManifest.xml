<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shuneault.netrunnerdeckbuilder"
    android:versionCode="19"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.shuneault.netrunnerdeckbuilder.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!--
                 <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="netrunnerdb.com" android:pathPrefix="/en/deck/copy/" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name="com.shuneault.netrunnerdeckbuilder.SettingsActivity"
            android:label="@string/menu_options" >
        </activity>
        <activity
            android:name="com.shuneault.netrunnerdeckbuilder.ViewImageActivity"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.shuneault.netrunnerdeckbuilder.ChooseIdentityActivity"
            android:label="@string/title_activity_choose_identity" >
        </activity>
        <activity
            android:name="com.shuneault.netrunnerdeckbuilder.ViewDeckFullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_view_deck_fullscreen"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.shuneault.netrunnerdeckbuilder.externalactivities.ImportOCTGNActivity"
            android:label="@string/title_activity_import_octgn" >
                        
            <!-- File o8d -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
                <data 
                	android:host="*"
                	android:pathPattern=".*\\.o8d"
                	android:mimeType="application/octet-stream" />
            </intent-filter>
                        
            <!-- File o8d -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
                <data 
                    android:scheme="file"
                	android:host="*"
                	android:pathPattern=".*\\.o8d"
                	android:mimeType="*/*" />
            </intent-filter>
                        
            <!-- o8d from the web -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="http"
                    android:host="netrunnerdb.com"
                    android:pathPrefix="/decklist/export/octgn" />
                <data
                    android:scheme="http"
                    android:host="netrunner.meteor.com"
                    android:pathPrefix="/deckexport/octgn" />
            </intent-filter>
            
        </activity>
    </application>

</manifest>
