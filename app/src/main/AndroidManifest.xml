<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shuneault.netrunnerdeckbuilder" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".helper.AppManager"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Netrunner" >
        <activity
            android:name="com.shuneault.netrunnerdeckbuilder.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.anrdigital.anrdeckbuilder.HANDLE_AUTHORIZATION_RESPONSE"/>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>                    
                <data android:scheme="https"
                    android:host="anrdigital.org"
                    android:path="/builderauth"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".DeckActivity"
            android:label="@string/deck_name"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name="com.shuneault.netrunnerdeckbuilder.SettingsActivity"
            android:label="@string/menu_options" >
        </activity>
        <activity
            android:name="com.shuneault.netrunnerdeckbuilder.ChooseIdentityActivity"
            android:label="@string/title_activity_choose_identity" >
        </activity>
        <activity
            android:name="com.shuneault.netrunnerdeckbuilder.ViewDeckFullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_view_deck_fullscreen" >
        </activity>
        <activity
            android:name=".ViewCardsAsGridActivity"
            android:label="@string/title_activity_view_deck_grid" />
        <activity android:name=".externalactivities.ImportDecksActivity"
            android:label="@string/import_decks">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.EDIT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.o8d"
                    android:scheme="content"
                    android:mimeType="*/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/octet-stream" android:host="*" android:pathPattern=".*\\.o8d" />
            </intent-filter>
        </activity>
        <activity android:name=".BrowseActivity"
            android:parentActivityName=".MainActivity"
            />


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths"/>
        </provider>
    </application>

</manifest>
