<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shuneault.netrunnerdeckbuilder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeckActivity"
            android:label="@string/deck_name"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/menu_options" />
        <activity
            android:name=".ChooseIdentityActivity"
            android:label="@string/title_activity_choose_identity" />
        <activity
            android:name=".ViewDeckFullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_view_deck_fullscreen" />
        <activity
            android:name=".externalactivities.ImportAllDecksActivity"
            android:label="@string/title_activity_import_octgn">

        <!-- Import json.anrdecks file (gmail, inbox) -->
        <intent-filter>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />

            <data
                android:mimeType="application/octet-stream"
                android:pathPattern=".*\\.anrdecks"
                android:scheme="content" />
        </intent-filter>

        <!-- Import json.anrdecks file (gmail, inbox) -->
        <intent-filter>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />

            <data
                android:mimeType="application/octet-stream"
                android:pathPattern=".*\\.anrdecks"
                android:scheme="file" />
        </intent-filter>

        </activity>

        <activity
            android:name=".externalactivities.ImportOCTGNActivity"
            android:label="@string/title_activity_import_octgn">

            <!-- File o8d -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.o8d"
                    android:scheme="file" />
            </intent-filter>

            <!-- o8d from the web -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="netrunnerdb.com"
                    android:pathPrefix="/decklist/export/octgn"
                    android:scheme="http" />
                <data
                    android:host="netrunner.meteor.com"
                    android:pathPrefix="/deckexport/octgn"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewDeckGridActivity"
            android:label="@string/title_activity_view_deck_grid" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="def5ac393f5d9aa7c798e837ca9fbec2343448a9" />
    </application>

</manifest>
