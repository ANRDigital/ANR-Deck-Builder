<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/netrunner_blue</item>
        <item name="colorPrimaryVariant">@color/netrunner_blue_light</item>
        <item name="colorSecondary">@color/fab_color</item>
        <item name="colorPrimaryDark">@color/netrunner_blue_dark</item>
        <item name="colorAccent">@color/netrunner_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="buttonTint">@color/navigation_text_color</item>
    </style>

    <!-- ListViewItems -->
    <style name="ListViewItem">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ListViewItemSelected">
        <item name="android:background">#CCC</item>
    </style>

    <style name="ListViewItemNormal">
        <item name="android:background">#0000</item>
    </style>

    <style name="ListViewHeaderFont" parent="android:Widget">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- InfoBar Color Scheme -->
    <style name="InfoBarGood">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#30AD23</item>
    </style>

    <style name="InfoBarBad">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#BA0000</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="MaterialButton">
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/selector_material_button</item>
        <item name="android:textColor">@color/netrunner_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="MaterialButtonRaised" parent="MaterialButton">

    </style>

    <style name="Theme.Netrunner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Netrunner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogListCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">


    </style>

</resources>
