<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>

    <!-- ListViewItems -->
    <style name="ListViewItemSelected">
        <item name="android:background">#CCC</item>
    </style>

    <style name="ListViewItemNormal">
        <item name="android:background">#0000</item>
    </style>

    <!-- InfoBar Color Scheme -->
    <style name="InfoBarGood">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#30AD23</item>
    </style>

    <style name="InfoBarBad">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#BA0000</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="MaterialButton">
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/selector_material_button</item>
        <item name="android:textColor">@color/netrunner_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="MaterialButtonRaised" parent="MaterialButton">

    </style>

</resources>
